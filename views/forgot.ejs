<!doctype html>
<html>
<head>
		
<meta charset="utf-8">
    <meta name="viewport" content="width=device-width,target-densitydpi=device-dpi, initial-scale=1">
	
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
      
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js" type="text/javascript">
        
</script>
	<style>
	
     .heddings{
              color: #35BFD3;
             font-weight: 600;
         }
.btn {
    color: #fff;
    background-color:#35BFD3;
    border-color: #35BFD3;
}
        .Forgotpagelogo{
            padding: 15px 15px;
            
        }
	</style>
</head>
    <script>
        var checkemail=function(){       
    var email =$("#email").val();
            if (email.length > 5) {
            $('#errMasgEmail').slideUp();
            return true;
        } else {
            $('#errMasgEmail').slideDown();
            return false;
        }
        };
        
    var validateform=function(){
       
        var emailok=checkemail();
       
        if(emailok)
             return true;
        else
            return false;
        
        
    };
    
    </script>
<body>
    <header>
      <div class="navbar-header logo Forgotpagelogo">
           
            <a href="/" >
                <img class="img-responsive" id="investory" src="images/mobileIcon.png" alt="" />         
            </a>
        </div>
    </header>
<div class="container" style="padding-top:60px;">

<div class="col-sm-6 col-sm-offset-2">

	<h1 class="heddings"><span class="fa fa-sign-in"></span> Forgot Password</h1>

	<!-- show any messages that come back with authentication -->
	

	<!-- LOGIN FORM -->
	<form onsubmit="return validateform()" action="/forgot" method="post">
		<div class="form-group">
            <label>Email :</label><br />
			<input type="text" class="form-control" id="email" name="email" placeholder="Email">
            <p id="errMasgEmail" style="display: none; color: red">Please Enter valid email</p>
		</div>
		
			

		<button type="submit" class="btn">Reset Password</button><br /><br />
                 
        
        	</form>
     <% if(message.length>0){ %>
                    <div class="alert alert-danger" style="margin-top:10px;"><%=message %></div>
  <%}%>
     
</div>

</div>
</body>
</html>
