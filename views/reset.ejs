<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,target-densitydpi=device-dpi, initial-scale=1">
	
	  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
      
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.1/jquery.min.js" type="text/javascript"> </script>
        
	<style>
		
         .heddings{
             color: #35BFD3;
             font-weight: 600;
         }
        .Forgotpagelogo{
            padding: 15px 15px;
            
        }
    .btn {
    color: #fff;
    background-color:#35BFD3;
    border-color: #35BFD3;
}
	</style>
</head>
    <script>
        
        var checkemail=function(){
        var email =$("#email").val();
         
            if (email.length > 5) {
            $('#errMasgEmail').slideUp();
            return true;
        } else {
            $('#errMasgEmail').slideDown();
            return false;
        }
        };
        var checkpassword1=function(){
          var password1=$("#password").val();
            if(password1.length >2){
               $('#errMasgPassword1').slideUp();
            return true;
        } else {
            $('#errMasgPassword1').slideDown();
            return false;
        }
            
        };
         var checkpassword2=function(){
          var password1=$("#password").val();
             var password2=$("#retypepassword").val();
          
            if(password1==password2){
               $('#errMasgPassword2').slideUp();
            return true;
        } else {
            $('#errMasgPassword2').slideDown();
            return false;
        }
            
        };
        
        var validateForm=function(){
           var emailok=checkemail();
           var passwordok1=checkpassword1();
            var passwordok2=checkpassword2();
            
        if(emailok && passwordok1 && passwordok2)
             return true;
        else
            return false;
        
        
            
            
        };
        
        </script>
<body>
    
    <header>
      <div class="navbar-header logo Forgotpagelogo">
           
            <a href="#" >
                <img class="img-responsive" id="investory" src="public/images/pending.png" alt="" />         
            </a>
        </div>
    </header>
<div class="container" style="padding-top:60px;">

<div class="col-sm-6 col-sm-offset-3">

	<h1 class="heddings"><span class="fa fa-sign-in"></span> Password Reset</h1>

	
	

	<!-- PASSWORD RESET FORM -->
	<form onsubmit="return validateForm()" action="/reset/token" method="post">
		<div class="form-group">
            <label>Email :</label>
			<input type="text" class="form-control" id="email" name="email" placeholder="Email">
              <p id="errMasgEmail" style="display: none; color: red">Please Enter valid email</p>
		</div>
		<div class="form-group">
			<label>New Password :</label>
			<input type="password" class="form-control" id="password" name="password" placeholder="New Password">
              <p id="errMasgPassword1" style="display: none; color: red">Please Enter valid Password</p>
		</div>
        <div class="form-group">
			<label>Confirm Password :</label>
			<input type="password" class="form-control" id="retypepassword" name="retypepassword" placeholder="Confirm-Password">
              <p id="errMasgPassword2" style="display: none; color: red">Confirm Password is Wrong</p>
		</div>
		<button type="submit" class="btn">Submit</button><br /><br />

        
        	</form>
      <% if(message.length>0){ %>
                    <div class="alert alert-danger" style="margin-top:10px;"><%=message %></div>
  <%}%>
</div>

</div>
</body>
</html>
